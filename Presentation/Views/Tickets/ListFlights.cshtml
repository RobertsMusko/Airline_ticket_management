@model IEnumerable<Presentation.Models.ViewModels.ListFlightViewModel>

@{
    ViewData["Title"] = "ListFlights";
}

<h1>List of all Flights</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSeats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSeats)
            </td>
            <td>
                    @if (item.AvailableSeats > 0)
                    {
                        if (!User.Identity.IsAuthenticated)
                        {
                            <div>
                                <a class="text-blue" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                <a class="text-blue" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                <a class="text-blue" asp-area="" asp-controller="Tickets" asp-action="bookFlight" asp-route-Id="@item.Id">Skip</a>
                            </div>
                        }
                        else
                        {
                            <a class="text-blue" asp-area="" asp-controller="Tickets" asp-action="bookFlight" asp-route-Id="@item.Id">Book this Flight</a>
                        }
                    }
                    <div></div>
                        <a class="text-blue" asp-area="" asp-controller="Tickets" asp-action="ListTickets" asp-route-Id="@item.Id">See all tickets for this flight</a>
            </td>
        </tr>
}
    </tbody>
</table>
