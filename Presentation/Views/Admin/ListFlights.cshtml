@model IEnumerable<Presentation.Models.ViewModels.ListFlightsAdminViewModel>

@{
    ViewData["Title"] = "ListFlights";
}

<h1>List of all Flights</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Columns)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WholesalePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommisionRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSeats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rows)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Columns)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryTo)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.WholesalePrice)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.CommisionRate)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.RetailPrice)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.TotalSeats)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.AvailableSeats)
                </td>
                <td>
                    <a class="text-blue" asp-area="" asp-controller="Admin" asp-action="ListTickets" asp-route-Id="@item.Id">All the Tickets</a>
                </td>
            </tr>
        }
    </tbody>
</table>
